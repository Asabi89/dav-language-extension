{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(Si|If|Sinon|Else|TantQue|While|Pour|For|Crée une fonction nommée|Create a function named).*\\.$",
    "decreaseIndentPattern": "^\\s*(FinSi|EndIf|FinTantQue|EndWhile|FinPour|EndFor|FinFonction|EndFunction|Sinon|Else)\\.$"
  },
  "folding": {
    "offSide": true,
    "markers": {
      "start": "^\\s*(Si|If|TantQue|While|Pour|For|Crée une fonction nommée|Create a function named)",
      "end": "^\\s*(FinSi|EndIf|FinTantQue|EndWhile|FinPour|EndFor|FinFonction|EndFunction)\\."
    }
  },
  "wordPattern": "[a-zA-ZÀ-ÿ'_][a-zA-ZÀ-ÿ0-9'_\\s]*",
  "onEnterRules": [
    {
      "beforeText": "^\\s*(Si|If)\\s+.*\\.$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*(Sinon|Else)\\.$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*(TantQue|While)\\s+.*\\.$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*(Pour|For)\\s+.*\\.$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*(Crée une fonction nommée|Create a function named).*\\.$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*(FinSi|EndIf|FinTantQue|EndWhile|FinPour|EndFor|FinFonction|EndFunction)\\.$",
      "action": {
        "indent": "outdent"
      }
    }
  ]
}
