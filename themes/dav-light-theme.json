{
    "name": "DAV Light Theme",
    "type": "light",
    "colors": {
        "editor.background": "#ffffff",
        "editor.foreground": "#2d3748",
        "editor.lineHighlightBackground": "#f7fafc",
        "editor.selectionBackground": "#bee3f8",
        "editorCursor.foreground": "#2b6cb0",
        "editorLineNumber.foreground": "#a0aec0",
        "editorLineNumber.activeForeground": "#2b6cb0"
    },
    "tokenColors": [
        {
            "name": "DAV Keywords French",
            "scope": [
                "keyword.control.dav.french",
                "keyword.declaration.dav.french"
            ],
            "settings": {
                "foreground": "#d53f8c",
                "fontStyle": "bold"
            }
        },
        {
            "name": "DAV Keywords English", 
            "scope": [
                "keyword.control.dav.english",
                "keyword.declaration.dav.english"
            ],
            "settings": {
                "foreground": "#2b6cb0",
                "fontStyle": "bold"
            }
        },
        {
            "name": "DAV Variables",
            "scope": [
                "variable.other.dav",
                "entity.name.variable.dav"
            ],
            "settings": {
                "foreground": "#38a169"
            }
        },
        {
            "name": "DAV Functions",
            "scope": [
                "entity.name.function.dav",
                "support.function.dav"
            ],
            "settings": {
                "foreground": "#3182ce",
                "fontStyle": "italic"
            }
        },
        {
            "name": "DAV Strings",
            "scope": [
                "string.quoted.double.dav",
                "string.quoted.single.dav"
            ],
            "settings": {
                "foreground": "#d69e2e"
            }
        },
        {
            "name": "DAV Numbers",
            "scope": [
                "constant.numeric.dav"
            ],
            "settings": {
                "foreground": "#805ad5"
            }
        },
        {
            "name": "DAV Operators",
            "scope": [
                "keyword.operator.dav",
                "keyword.operator.arithmetic.dav"
            ],
            "settings": {
                "foreground": "#e53e3e",
                "fontStyle": "bold"
            }
        },
        {
            "name": "DAV Comments",
            "scope": [
                "comment.line.dav",
                "comment.block.dav"
            ],
            "settings": {
                "foreground": "#718096",
                "fontStyle": "italic"
            }
        },
        {
            "name": "DAV Natural Connectors",
            "scope": [
                "keyword.other.natural.dav"
            ],
            "settings": {
                "foreground": "#ed8936"
            }
        }
    ]
}
